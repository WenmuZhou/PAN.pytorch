{
    "name": "PAN",
    "data_loader": {
        "type": "ImageDataset",
        "args": {
            "alphabet": "alphabet.npy",
            "dataset": {
                "train_data_path": [
                    [
                        "E:\\zj\\dataset\\icdar2015\\train\\train.txt"
                    ]
                ],
                "train_data_ratio": [
                    1.0
                ],
                "val_data_path": [
                ],
                "input_size": 640,
                "img_channel": 3,
                "shrink_ratio": 0.5
            },
            "loader": {
                "validation_split": 0.1,
                "train_batch_size": 8,
                "val_batch_size": 1,
                "shuffle": true,
                "pin_memory": false,
                "num_workers": 6
            }
        }
    },
    "arch": {
        "type": "PANModel",
        "args": {
            "backbone": "resnet18",
            "fpem_repeat": 2,
            "pretrained": false
        }
    },
    "loss": {
        "type": "PANLoss",
        "args": {
            "alpha": 0.5,
            "beta": 0.25,
            "delta_agg": 0.5,
            "delta_dis": 3,
            "ohem_ratio": 3
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 200,
            "gamma": 0.1
        }
    },
    "trainer": {
        "seed": 2,
        "gpus": [
            0
        ],
        "epochs": 600,
        "display_interval": 10,
        "resume": {
            "restart_training": true,
            "checkpoint": ""
        },
        "output_dir": "output",
        "tensorboard": true
    }
}